<section class="row">
    <div class="column">
        <h2>New Blog Post</h2>

        <form class="new-blog-form">
            <div>
                <label for="blog-title">Title</label>
                <input type="text" id="blog-title" name="blog-title" />
            </div>
            <div>
                <label for="blog-content">Content</label>
                <textarea id="blog-content" name="blog-content"></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
</section>

{{#if blogs.length}}
<section>
    <div class="col-md-6 blog-list">
    <h2>My Blog Posts</h2>
    <ol>
        {{#each blogs as |blog|}}
        <li>
            <div class="row mb-2" id="blog">
                <div class="col-md-8" id="blog-heading">
                    <div class="blog-title" id="blog-title">
                        <h3>{{title}}</h2>
                    </div>
                    <div class="blog-date" id="blog-date">
                        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
                    </div>
                    <div class="blog-content" id="blog-content">
                        <p>{{contents}}</p>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-danger" data-id="{{user_id}}">DELETE</button>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}