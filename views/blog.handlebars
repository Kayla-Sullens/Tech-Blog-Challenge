<div class="post">
    <div class="post-heading">
        <div class="post-name">
            <h2>{{title}}</h2>
        </div>
        <div class="post-date">
            <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        </div>
    <div class="post-content">
            <p>{{contents}}</p>
    </div>
</div>