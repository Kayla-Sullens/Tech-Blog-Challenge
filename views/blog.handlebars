<div class="blog">
    <div class="blog-heading">
        <div class="blog-name">
            <h2>{{title}}</h2>
        </div>
        <div class="blog-date">
            <p>Posted by {{user.username}} on {{format_date date_created}}</p>
        </div>
    <div class="blog-content">
            <p>{{contents}}</p>
    </div>
</div>

